<% book_comment.each do |comment| %>
  <table class="table">
    <tr>
      <td>
        <%= link_to user_path(comment.user_id) do %>
    <%= image_tag comment.user.get_profile_image(100,100) %>
    <% end %>
    </td>
    <td><%= comment.user.name %></td>
    <td><%= comment.comment %></td>
    <td><%= comment.created_at.strftime("%Y/%m/%d") %></td>
    <% if comment.user_id == current_user.id %>
    <td><%= link_to "Destroy",book_book_comment_path(comment.id),method: :delete,remote: true,class: "btn btn-danger" %></td>
    <% end %>
    </tr>
    <% end %>
  </table>

  <%= form_with model: [book,comment],local: false do |f| %>
  <%= f.text_area :comment,rows: "5",placeholder: "コメントはここ",class: "form-control" %>
  <%= f.submit "送信",class: "btn btn-primary" %>
  <% end %>