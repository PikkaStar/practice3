<div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'show',user: @user %>
<%= render 'books/new',book: @book %>
</div>

<div class="col-md-8 offset-1">
  <h1>Books</h1>
<table class="table table-striped">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
    <% if @user.id == current_user.id %>
    <th></th>
    <% end %>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
      </td>
    <td><%= book.body %></td>
     <% if book.user_id == current_user.id %>
    <td>
    コメント<%= book.book_comments.count %>件
    </td>
    <td>
      <%= book.favorites.count %>いいね
    </td>
    <% else %>
    <td>
    <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book.id),method: :delete do %>♥<%= book.favorites.count %>いいね
    <% end %>
    <% else %>
    <%= link_to book_favorites_path(book.id),method: :post do %>♡<%= book.favorites.count %>いいね
    <% end %>
    <% end %>

  <% end %>
  </td>
  </tr>
  <% end %>
</table>
</div>
 </div>
</div>


