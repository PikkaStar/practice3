<div class="container">
  <div class="row">
    <div class="col-md-3">

<%= render 'show',user: @user %>
<%= render 'books/new',book: @book %>
</div>
<div class="col-md-8 offset-1">
<h1>Users</h1>
<div>
  <table class="table table-striped">
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td>フォロー<%= user.followings.count %>人</td>
      <td>フォロワー<%= user.followers.count %>人</td>

      <td>
        <% unless current_user.id == user.id %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー解除",user_relationships_path(user.id),method: :delete,class: "btn btn-danger" %>
        <% else %>
        <%= link_to "フォロー",user_relationships_path(user.id),method: :post,class: "btn btn-success" %>
      <% end %>
      <% end %>
      </td>

      <td><%= link_to "Show",user_path(user.id),class: "btn btn-info" %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>
 </div>
</div>