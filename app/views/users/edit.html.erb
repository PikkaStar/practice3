<h1>User info</h1>

<%= form_with model: @user do |f| %>
<%= f.label :name,"Name" %><br>
<%= f.text_field :name,autofocus: true %><br>
<p>image</p>
<%= f.file_field :profile_image,accept: "image/*" %>
<br>
<br>
<%= f.label :introduction,"Introduction" %><br>
<%= f.text_area :introduction,rows: "5" %><br>
<%= f.submit "Update User" %>

<% end %>
