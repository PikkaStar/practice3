<div class="container">
  <div class="row">
    <div class="mx-auto">
<h1>User info</h1>

<% if @user.errors.any? %>
<%= @user.errors.count %>件のエラー
<% @user.errors.full_messages.each do |message| %>
<li>
  <%= message %>
</li>
<% end %>
<% end %>

<%= form_with model: @user do |f| %>
<%= f.label :name,"Name" %><br>
<%= f.text_field :name,autofocus: true,class: "form-control" %><br>
<p>image</p>
<%= f.file_field :profile_image,accept: "image/*" %>
<br>
<br>
<%= f.label :introduction,"Introduction" %><br>
<%= f.text_area :introduction,rows: "5",class: "form-control" %><br>
<%= f.submit "Update User",class: "btn btn-primary" %>

<% end %>
</div>
 </div>
</div>
