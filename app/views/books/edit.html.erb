<div class="container">
  <div class="row">
    <div class="mx-auto">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラー
<% @book.errors.full_messages.each do |message| %>
<li>
  <%= message %>
</li>
<% end %>
<% end %>
<%= form_with model: @book do |f| %>

<%= f.label :title,"Title" %><br>
<%= f.text_field :title,autofocus: true,class: "form-control" %><br>
<%= f.label :body,"Opinion" %><br>
<%= f.text_area :body,class: "form-control" %><br>
<%= f.submit "Update Book",class: "btn btn-primary" %>
<% end %>
</div>
 </div>
</div>

